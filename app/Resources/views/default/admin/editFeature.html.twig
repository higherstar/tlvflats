{% extends 'base.html.twig' %}

{% block body %}

    <div class="row">
        <div class="col-md-12">
            <a href="{{ path('admin_main') }}">Back to admin page</a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            {{ form_start(form) }}
            {{ form_errors(form) }}
            <div class="form-group">
                {{ form_label(form.faName, 'FA Name:') }}
                {{ form_errors(form.faName) }}
                {{ form_widget(form.faName, {'attr': {'class': 'form-control' }}) }}
            </div>
            <div class="form-group">
                {{ form_label(form.name, 'Name:') }}
                {{ form_errors(form.name) }}
                {{ form_widget(form.name, {'attr': {'class': 'form-control' }}) }}
            </div>

            {{ form_widget(form.save, {'attr': {'class': 'btn btn-default' }}) }}
            {{ form_end(form) }}
        </div>
    </div>

    <div class="row">
        {% for feature in features %}
            <div class="col-md-3">
                <i class="fa {{ feature }}">&nbsp;</i><a href="#" id="{{ feature }}" class="fa_link">{{ feature }}</a>
            </div>
        {% endfor %}
    </div>
{% endblock %}

{% block header %}
<script>
    $(function() {
        $('.fa_link').click(function(){
            $('#form_faName').val($(this).attr('id'));
            return false;
        })
    })
</script>
{% endblock %}