{% extends 'base.html.twig' %}

{% block body %}

    <div class="row">
        <div class="col-md-12">
            <a href="{{ path('admin_main') }}">Back to admin page</a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            {{ form_start(form) }}
            {{ form_errors(form) }}
            <div class="form-group">
                {{ form_label(form.name, 'Name:') }}
                {{ form_errors(form.name) }}
                {{ form_widget(form.name, {'attr': {'class': 'form-control' }}) }}
            </div>
            <div class="form-group">
                {{ form_label(form.code, 'Code:') }}
                {{ form_errors(form.code) }}
                {{ form_widget(form.code, {'attr': {'class': 'form-control' }}) }}
            </div>
            <div class="form-group">
                {{ form_label(form.symbol, 'Symbol:') }}
                {{ form_errors(form.symbol) }}
                {{ form_widget(form.symbol, {'attr': {'class': 'form-control' }}) }}
            </div>
            <div class="form-group">
                {{ form_errors(form.before) }}
                {{ form_label(form.before, 'Put symbol before amount') }}
                {{ form_widget(form.before) }}
            </div>

            {{ form_widget(form.save, {'attr': {'class': 'btn btn-default' }}) }}
            {{ form_end(form) }}
        </div>
    </div>

{% endblock %}